    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
      {
        "title_label_header@settings_common.title_header": {
          "$title": "controls_section.controls.touch"
        }
      },
      { "title_header_padding": { "type": "panel", "size": [ "100%", 4 ] } },
      {
        "sneak_joystickVisibility_options@settings_common.new_options_design_base": {
          "$options_1": [
            {
              "sneak_dropdown@settings_common.ore_option_dropdown": {
                "$option_label": "options.sneakOption",
