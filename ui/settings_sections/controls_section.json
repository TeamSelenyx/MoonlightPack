{
  "namespace": "controls_section",

  // Controls Settings Button & Section
  "controls_ore_button@settings_common.ore_section_toggle_base": {
    "$toggle_view_binding_name": "controls_button_toggle",
    "$glyph_color_texture": "textures/ui/empty",
    "$glyph_size": [ 17, 17 ],
    "variables": [
      {
        "requires": "($touch)",
        "$glyph_color_texture": "textures/ui/ore/icon_touch"
      },
      {
        "requires": "($mouse)",
        "$glyph_color_texture": "textures/ui/ore/icon_keyborad_and_mouse"
      },
      {
        "requires": "($game_pad)",
        "$glyph_color_texture": "textures/ui/ore/icon_gamepad"
      }
    ],
    "$button_text": "controls_section.controls",
    "$toggle_property_bag": {
      "#panel_title": "$button_text"
    }
  },

  "controls_section_header": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$spatialPatternsPadding": [ "100%", 8 ],
    "$paddingLineDivider": [ "100%", 16 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "controls_button_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "category_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%cm" ],
          "orientation": "horizontal",
          "$default_selector_toggle_index": 0,
          "variables": [
            {
              "requires": "($mouse)",
              "$default_selector_toggle_index": 1
            },
            {
              "requires": "($game_pad)",
              "$default_selector_toggle_index": 2
            }
          ],
          "controls": [
            {
              "touch@controls_section.touch_ore_tab_button": {
                "enabled": "(not $is_holographic or $touch_supported or not $nx_os)",
                "size": [ "fill", 24 ],
                "$panel_title": "controls_section.touch.title",
                "$toggle_group_forced_index": 0,
                "$toggle_name": "controls_visible_toggle"
              }
            },
            {
              "keyboard_and_mouse@controls_section.keyboard_and_mouse_ore_tab_button": {
                "enabled": "($keyboard_and_mouse_supported)",
                "size": [ "fill", 24 ],
                "$panel_title": "controls_section.keyboard_and_mouse.title",
                "$toggle_group_forced_index": 1,
                "$toggle_name": "controls_visible_toggle"
              }
            },
            {
              "controller@controls_section.controller_ore_tab_button": {
                "enabled": "($gamepad_supported)",
                "size": [ "fill", 24 ],
                "$panel_title": "controls_section.controller.title",
                "$toggle_group_forced_index": 2,
                "$toggle_name": "controls_visible_toggle"
              }
            },
            {
              "switch_controller@controls_section.touch_ore_tab_button": {
                "ignored": "(not $gamepad_supported or not $nx_os)",
                "size": [ "fill", 24 ],
                "$panel_title": "controls_section.touch.title",
                "$glyph_texture": "textures/ui/controller_glyph_switch",
                "$glyph_color_texture": "textures/ui/controller_glyph_color_switch",
                "$toggle_group_forced_index": 2,
                "$toggle_name": "controls_visible_toggle"
              }
            }
          ]
        }
      },
      {
        "light_line_panel@settings_common.light_line_panel": {}
      }
    ]
  },

  "controls_section": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$spatialPatternsPadding": [ "100%", 8 ],
    "$paddingLineDivider": [ "100%", 16 ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "controls_button_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "touch@controls_section.touch_section": {}
      },
      {
        "keyboard_and_mouse@controls_section.keyboard_and_mouse_section": {}
      },
      {
        "controller@controls_section.controller_section": {}
      }
    ]
  },


  // Keyboard and Mouse button & section
  "keyboard_and_mouse_ore_tab_button@settings_common.ore_tab_section_toggle_base": {
    "$toggle_view_binding_name": "keyboard_and_mouse_button_toggle",
    "$glyph_texture": "textures/ui/keyboard_and_mouse_glyph",
    "$glyph_color_texture": "textures/ui/keyboard_and_mouse_glyph_color",
    "$glyph_size": [ 19, 9 ],
    "$button_text": "options.keyboardAndMouse",
    "$toggle_property_bag": {
      "#panel_title": "$panel_title"
    }
  },


  // Controller button & section
  "controller_ore_tab_button@settings_common.ore_tab_section_toggle_base": {
    "$toggle_view_binding_name": "controller_button_toggle",
    "$glyph_texture": "textures/ui/controller_glyph",
    "$glyph_color_texture": "textures/ui/controller_glyph_color",
    "$glyph_size": [ 21, 14 ],
    "$button_text": "options.controller",
    "$toggle_property_bag": {
      "#panel_title": "$panel_title"
    }
  },


  // Touch button & section
  "touch_ore_tab_button@settings_common.ore_tab_section_toggle_base": {
    "$toggle_view_binding_name": "touch_button_toggle",
    "$glyph_texture": "textures/ui/touch_glyph",
    "$glyph_color_texture": "textures/ui/touch_glyph_color",
    "$glyph_size": [ 20, 14 ],
    "$button_text": "options.touch",
    "$toggle_property_bag": {
      "#panel_title": "$panel_title"
    }
  },

  "touch_section": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "touch_button_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "touch_controls_stack_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%c" ],
          "controls": [
			{
			  "contorl_title_header@settings_common.title_header": {
                "$title": "controls_section.contorl_title"
			  }
		    },
		    {
			  "control_title_void_panel@common.empty_panel": { "size": [ 0, 4 ] }
		    },
            {
              "control_scheme_section": {
                "type": "stack_panel",
                "size": [ "100%", "100%c" ],
                "controls": [
                  {
                    "section_label": { "type": "label", "color": "$body_text_color", "text": "options.controlMode.title" }
                  },
                  { "padding_0@common.empty_panel": { "size": [ 0, "5px" ] } },
                  {
                    "image_and_button": {
                      "type": "stack_panel",
                      "size": [ "100%", "100%cm" ],
                      "orientation": "horizontal",
                      "controls": [
                        {
                          "images": {
                            "type": "panel",
                            "size": [ "59%", "50%x" ],
                            "controls": [
                              {
                                "touch_image": {
                                  "type": "image",
                                  "texture": "textures/ui/thumbnail_touch",
                                  "bindings": [
                                    {
                                      "binding_name": "#touch_selected",
                                      "binding_name_override": "#visible"
                                    }
                                  ]
                                }
                              },
                              {
                                "crosshair_image": {
                                  "type": "image",
                                  "texture": "textures/ui/thumbnail_crosshair",
                                  "bindings": [
                                    {
                                      "binding_name": "#crosshair_selected",
                                      "binding_name_override": "#visible"
                                    }
                                  ]
                                }
                              },
                              {
                                "classic_image": {
                                  "type": "image",
                                  "texture": "textures/ui/thumbnail_classic",
                                  "bindings": [
                                    {
                                      "binding_name": "#classic_selected",
                                      "binding_name_override": "#visible"
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        },
                        { "padding@common.empty_panel": { "size": [ "1%", "1px" ] } },
                        {
                          "scheme_button_section": {
                            "type": "panel",
                            "size": [ "40%", "100%sm" ],
                            "controls": [
                              {
                                "caption": {
                                  "type": "stack_panel",
                                  "size": [ "100%", "100%c" ],
                                  "anchor_to": "top_middle",
                                  "anchor_from": "top_middle",
                                  "controls": [
                                    {
                                      "selected_label": {
                                        "type": "label",
                                        "font_scale_factor": 1.2,
                                        "color": "$body_text_color",
                                        "text": "options.controlMode.Selected"
                                      }
                                    },
                                    {
                                      "selected_control": {
                                        "type": "label",
                                        "font_scale_factor": 1.0,
                                        "size": [ "100%", "default" ],
                                        "color": [ 0.7, 0.7, 0.7 ],
                                        "text": "#selected_control_scheme",
                                        "bindings": [
                                          {
                                            "binding_name": "#selected_control_scheme_name",
                                            "binding_name_override": "#selected_control_scheme"
                                          }
                                        ]
                                      }
                                    }
                                  ]
                                }
                              },
                              {
                                "control_panel": {
                                  "type": "stack_panel",
                                  "size": [ "100%", "100%c" ],
                                  "anchor_to": "bottom_middle",
                                  "anchor_from": "bottom_middle",
                                  "controls": [
                                    {
                                      "select_control_mode@settings_common.ore_action_button": {
                                        "$pressed_button_name": "button.select_control_mode",
                                        "$button_text": "options.controlMode.selectControlMode",
                                        "size": [ "100%", 24 ],
                                        "anchor_to": "bottom_middle",
                                        "anchor_from": "bottom_middle"
                                      }
                                    },
                                    {
                                      "modify_control_layout_section": {
                                        "type": "stack_panel",
                                        "size": [ "100%", 24 ],
                                        "controls": [
                                          {
                                            "modify_control_layout_button@settings_common.ore_action_button": {
                                              "$pressed_button_name": "button.modify_control_layout",
                                              "$button_text": "hudScreen.controlCustomization.customiseControls",
                                              "$focus_override_down": "FOCUS_OVERRIDE_STOP",
                                              "size": [ "100%", "100%" ],
                                              "bindings": [
                                                {
                                                  "binding_name": "#modify_layout_enabled",
                                                  "binding_name_override": "#enabled"
                                                }
                                              ]
                                            }
                                          },
                                          {
                                            "customize_tooltip_option@controls_section.customize_tooltip_option": {
                                              "bindings": [
                                                {
                                                  "binding_name": "(not #modify_layout_enabled)",
                                                  "binding_name_override": "#visible"
                                                }
                                              ]
                                            }
                                          }
                                        ],
                                        "bindings": [
                                          {
                                            "binding_name": "#resizable_ui_active",
                                            "binding_name_override": "#visible",
                                            "binding_type": "global"
                                          }
                                        ]
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
		    { "resizable_ui_void@common.empty_panel": { "size": [ 0, 4 ] } },
            {
              "option_resizable_ui@settings_common.ore_option_toggle": {
                "$option_label": "options.resizableUI",
                "$option_binding_name": "#resizable_ui",
                "$option_enabled_binding_name": "#resizable_ui_enabled",
                "$toggle_name": "resizable_ui"
              }
            },

            {
			  "sensitivity_and_vibration_light_line_panel@settings_common.light_line_panel": {}
			},
			{
			  "sensitivity_and_vibration_title_header@settings_common.title_header": {
                "$title": "controls_section.sensitivity_and_vibration_title"
			  }
		    },
		    { "sensitivity_and_vibration_void@common.empty_panel": { "size": [ 0, 4 ] } },
			{
              "option_slider_0@settings_common.ore_option_slider": {
                "$option_label": "#touch_sensitivity_slider_label",
                "$slider_name": "touch_sensitivity",
                "$slider_value_binding_name": "#touch_sensitivity",
                "$slider_tts_text_value": "#touch_sensitivity_text_value",
                "$option_enabled_binding_name": "#touch_sensitivity_enabled",
                "$label_bindings": [
                  {
                    "binding_name": "$option_label"
                  }
                ]
              }
            },
            {
              "option_slider_damen@settings_common.ore_option_slider": {
                "$option_label": "#spyglass_touch_dampening_slider_label",
                "$slider_name": "spyglass_touch_dampening",
                "$slider_value_binding_name": "#spyglass_touch_dampening",
                "$slider_tts_text_value": "#spyglass_touch_dampening_text_value",
                "$option_enabled_binding_name": "#touch_sensitivity_enabled",
                "$label_bindings": [
                  {
                    "binding_name": "$option_label"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "invertYAxis_splitVibration_options@settings_common.new_options_design_base": {
          "$options_1": [
            {
              "option_toggle_invert_y@settings_common.ore_option_toggle": {
                "$option_label": "options.invertYAxis",
                "$option_binding_name": "#touch_invert_y_axis",
                "$option_enabled_binding_name": "#touch_invert_y_axis_enabled",
                "$toggle_name": "touch_invert_y_axis"
              }
            }
          ],
          "$options_2": [
            {
              "option_toggle_split_vibration@settings_common.ore_option_toggle": {
                "$option_label": "options.splitvibration",
                "$option_binding_name": "#touch_split_vibration",
                "$option_enabled_binding_name": "#touch_split_vibration_enabled",
                "$toggle_name": "touch_split_vibration"
              }
            }
          ]
        }
      },
      {
        "desroyVibration_creativeDelayedBlockBreaking_options@settings_common.new_options_design_base": {
          "$options_1": [
            {
              "option_toggle_destroy_vibration@settings_common.ore_option_toggle": {
                "$option_label": "options.destroyvibration",
                "$option_binding_name": "#touch_destroy_vibration",
                "$option_enabled_binding_name": "#touch_destroy_vibration_enabled",
                "$toggle_name": "touch_destroy_vibration"
              }
            }
          ],
          "$options_2": [
            {
              "option_creative_delayed_block_breaking@settings_common.ore_option_toggle": {
                "$option_label": "options.creativeDelayedBlockBreaking",
                "$option_binding_name": "#creative_delayed_block_breaking",
                "$option_enabled_binding_name": "#creative_delayed_block_breaking_enabled",
                "$toggle_name": "creative_delayed_block_breaking",
                "bindings": [
                  {
                    "binding_name": "(not #crosshair_action_button_on)",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            }
          ]
        }
      },


      {
        "touch_controls_light_line_panel@settings_common.light_line_panel": {}
      },
      { "touch_void@common.empty_panel": { "size": [ "100%", 4 ] } },
      {
        "classic@classic_controls_section": {
          "bindings": [
            {
              "binding_name": "#classic_selected",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "touch@touch_controls_section": {
          "bindings": [
            {
              "binding_name": "#touch_selected",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "crosshair@crosshair_controls_section": {
          "bindings": [
            {
              "binding_name": "#crosshair_selected",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "showBlockSelectButton_leftHanded_options@settings_common.new_options_design_base": {
          "$options_1": [
            {
              "option_show_block_select_button@settings_common.ore_option_toggle": {
                "ignored": "$education_edition",
                "$option_label": "options.showBlockSelectButton",
                "$option_binding_name": "#show_block_select_button",
                "$option_enabled_binding_name": "#show_block_select_button_enabled",
                "$toggle_name": "show_block_select_button",
                "$has_option_description": true,
                "$option_description": "options.showBlockSelectButton.message"
              }
            }
          ],
          "$options_2": [
            {
              "option_toggle_left_handed@settings_common.ore_option_toggle": {
                "$option_label": "options.lefthanded",
                "$option_binding_name": "#left_handed",
                "$option_enabled_binding_name": "#left_handed_enabled",
                "$toggle_name": "left_handed"
              }
            }
          ]
        }
      },
      {
        "option_enable_new_touch_control_schemes_button@settings_common.ore_option_toggle": {
          "$option_label": "options.enableNewTouchControlSchemes",
          "$option_binding_name": "#enable_new_touch_control_schemes",
          "$option_enabled_binding_name": "#enable_new_touch_control_schemes_enabled",
          "$toggle_name": "enable_new_touch_control_schemes",
          "bindings": [
            {
              "binding_name": "#new_touch_control_schemes_preview_enabled",
              "binding_name_override": "#visible"
            }
          ]
        }
      },

      {
        "drag_light_line_panel@settings_common.light_line_panel": {}
      },
      {
        "drag_title_header@settings_common.title_header": {
          "$title": "controls_section.drag.title"
        }
      },
      { "drag_header_padding": { "type": "panel", "size": [ "100%", 4 ] } },
      {
        "drag_dwell_stack_splitting_options@settings_common.new_options_design_base": {
          "enabled": "$touch",
          "$options_1": [
            {
              "option_slider_drag_dwell@settings_common.ore_option_slider": {
                "$option_label": "#dwell_before_drag_time_slider_label",
                "$slider_name": "dwell_before_drag_time",
                "$slider_value_binding_name": "#dwell_before_drag_time",
                "$slider_tts_text_value": "#dwell_before_drag_time_text_value",
                "$option_enabled_binding_name": "#dwell_before_drag_time_enabled",
                "$label_bindings": [
                  {
                    "binding_name": "$option_label"
                  }
                ]
              }
            },
            {
              "drag_dwell_info_label_wrapper@common.tts_label_focus_wrapper": {
                "$tts_label_panel": "controls_section.drag_dwell_info_label"
              }
            }
          ],
          "$options_2": [
            {
              "option_slider_stack_splitting@settings_common.ore_option_slider": {
                "$option_label": "#stack_splitting_trigger_time_slider_label",
                "$slider_name": "stack_splitting_trigger_time",
                "$slider_value_binding_name": "#stack_splitting_trigger_time",
                "$slider_tts_text_value": "#stack_splitting_trigger_time_text_value",
                "$option_enabled_binding_name": "#stack_splitting_trigger_time_enabled",
                "$label_bindings": [
                  {
                    "binding_name": "$option_label"
                  }
                ]
              }
            },
            {
              "stack_splitting_info_label_wrapper@common.tts_label_focus_wrapper": {
                "$tts_label_panel": "controls_section.stack_splitting_info_label"
              }
            }
          ]
        }
      },


      {
        "reset_light_line_panel@settings_common.light_line_panel": {}
      },
      {
        "reset_button@settings_common.ore_action_button": {
          "$pressed_button_name": "button.reset_touch_bindings",
          "$button_text": "controllerLayoutScreen.resetAllBindings",
          "$focus_override_down": "FOCUS_OVERRIDE_STOP"
        }
      }
    ]
  },

  // Touch Controls
