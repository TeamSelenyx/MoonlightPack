{
  "namespace": "settings_common",

  // Luna Added
  "light_line_panel": {
    "$panel_size|default": [ "100%", "100%c + 14px" ],
    "$line_size|default": [ "100% - 30%", 1 ],
    "$line_offset|default": [ 0, 0 ],
    "$line_color|default": [ 1.0, 1.0, 1.0 ],

    "type": "panel",
    "size": "$panel_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "section_divider": {
          "layer": 3,
          "type": "image",
          "size": "$line_size",
          "offset": "$line_offset",
          "color": "$line_color",
          "anchor_from": "center",
          "anchor_to": "center",
          "texture": "textures/ui/list_item_divider_line_light"
        }
      }
    ]
  },

  "light_line_horizontal_panel@settings_common.light_line_panel": {
    // Base Size
  },

  "light_line_vertical_panel@settings_common.light_line_panel": {
    "$panel_size": [ 20, "100%" ],
    "$line_size": [ 2, "50%" ]
  },


  "subsection_title": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100%", "100%c + 10px" ],
    "$text|default": "",
    "controls": [
      {
        "spacer_0": {
          "type": "panel",
          "size": [ "100%", 4 ]
        }
      },
      {
        "sizer_0": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "title": {
                "type": "label",
                "color": "$main_header_text_color",
                "text_alignment": "center",
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 3,
                "text": "$text"
              }
            }
          ]
        }
      },
      {
        "spacer_1": { "type": "panel", "size": [ "100%", 2 ] }
      },
      {
        "sizer_1": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "section_divider": {
                "type": "image",
                "size": [ "100% - 4px", 1 ],
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 3,
                "texture": "textures/ui/list_item_divider_line_light"
              }
            }
          ]
        }
      }
    ]
  },

  "new_options_design_base": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "$options_panel_size|default": [ "100%", "100%cm" ],
    "$options_1|default": [],
    "$options_2|default": [],
    "controls": [
      {
        "options": {
          "type": "stack_panel",
          "size": "$options_panel_size",
          "anchor_from": "center",
          "anchor_to": "center",
          "orientation": "horizontal",
          "controls": [
            { "options_1": { "type": "stack_panel", "size": [ "fill", "100%c" ], "controls": "$options_1" } },
            { "void_panel@common.empty_panel": { "size": [ 8, 0 ] } },
            { "options_2": { "type": "stack_panel", "size": [ "fill", "100%c" ], "controls": "$options_2" } }
          ]
        }
      }
    ]
  },

  "title_header": {
    "type": "label",
    "color": "$main_header_text_color",
    "shadow": true,
    "font_type": "MinecraftTen",
    "font_scale_factor": 1.6,
    "$title|default": "",
    "text": "$title"
  },

  "icon_with_text_border_base": {
    "type": "panel",
    "size": [ "100%", "100%c" ],
    "$border_size|default": [ "100%", 38 ],
    "$border_color|default": [ 1.0, 1.0, 1.0 ],
    "$border_icon|default": "textures/ui/icon_none",
    "$border_icon_cover|default": "textures/ui/icon_none",
    "$border_icon_cover_visible|default": false,
    "$border_text|default": "",
    "controls": [
      {
        "info_text_panel": {
          "layer": 5,
          "type": "image",
          "size": "$border_size",
          "texture": "textures/ui/hud_text_background_white",
          "color": "$border_color",
          "controls": [
            {
              "content_stack": {
                "type": "stack_panel",
                "size": [ "100% - 8px", "100% - 8px" ],
                "anchor_from": "center",
                "anchor_to": "center",
                "orientation": "horizontal",
                "controls": [
                  {
                    "icon_panel": {
                      "layer": 7,
                      "type": "panel",
                      "size": [ "100%y", "100%" ],
                      "controls": [
                        {
                          "icon": { "type": "image", "size": [ "90%", "90%" ], "anchor_from": "center", "anchor_to": "center", "texture": "$border_icon" }
                        },
                        {
                          "icon_cover": { "visible": "$border_icon_cover_visible", "type": "image", "size": [ "90% + 0.5px", "90% + 0.5px" ], "anchor_from": "center", "anchor_to": "center", "texture": "$border_icon_cover" }
                        }
                      ]
                    }
                  },
                  { "void_panel@common.empty_panel": { "size": [ 2, 0 ] } },
                  {
                    "text_panel": {
                      "type": "panel",
                      "size": [ "fill", "100%" ],
                      "controls": [
                        {
                          "text": {
                            "layer": 7,
                            "type": "label",
                            "size": [ "default", "default" ],
                            "max_size": [ "100%", "100%" ],
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "text": "$border_text"
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "ore_info_label_panel": {
    "type": "image",
    "texture": "textures/ui/text_label_box",
    "size": [ "100%", "100%c + 6px" ],
    "$used_fontsize|default": "normal",
    "$used_fonttype|default": "default",
    "controls": [
      {
        "control": {
          "layer": 1,
          "type": "label",
          "color": "$main_header_text_color",
          "size": [ "100% - 8px", "default" ],
          "text": "$container_text_binding_name",
          "text_alignment": "center",
          "font_size": "$used_fontsize",
          "font_type": "$used_fonttype",
          "bindings": [
            {
              "binding_name": "$container_text_binding_name"
            }
          ]
        }
      }
    ]
  },



  // Ore UI Design Options
  "ore_action_button@common_buttons.light_text_button": {
    "$pressed_button_name|default": "unset_button_name",
    "$button_text|default": "unset $button_text",
    "size": [ "100%", 30 ],
    "anchor_from": "center",
    "anchor_to": "center",

    "$new_sound_enabled|default": false,
    "variables": [
      {
        "requires": "$new_sound_enabled",
        "sound_name": "click_on.ore_button_click"
      }
    ],

    "$border_visible": false,
    "$button_image_size|default": [ "100%", "100%" ],
    "$button_offset|default": [ 0, -1 ],
    "$button_pressed_offset|default": [ 0, 2 ],

    "$default_text_color|default": "$light_button_default_text_color",
    "$hover_text_color|default": "$light_button_default_text_color",
    "$pressed_text_color|default": "$light_button_default_text_color",
    "$locked_text_color|default": "$light_button_locked_text_color",

    "$default_button_texture|default": "textures/ui/ore/button_borderless_light",
    "$hover_button_texture|default": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_button_texture|default": "textures/ui/ore/button_borderless_lightpressed",
    "$locked_button_texture|default": "textures/ui/ore/disabledButtonNoBorder"
  },

  "ore_link_button@common_buttons.hyperlink_button": {
    "$button_text|default": "unset $button_text",
    "size": [ "100%", 30 ],
    "anchor_from": "center",
    "anchor_to": "center",

    "$new_sound_enabled|default": false,
    "variables": [
      {
        "requires": "$new_sound_enabled",
        "sound_name": "click_on.ore_button_click"
      }
    ],

    "$border_visible": false,
    "$button_image_size|default": [ "100%", "100%" ],
    "$button_offset|default": [ 0, -1 ],
    "$button_pressed_offset|default": [ 0, 2 ],

    "$default_text_color|default": "$light_button_default_text_color",
    "$hover_text_color|default": "$light_button_default_text_color",
    "$pressed_text_color|default": "$light_button_default_text_color",
    "$locked_text_color|default": "$light_button_locked_text_color",

    "$default_button_texture|default": "textures/ui/ore/button_borderless_light",
    "$hover_button_texture|default": "textures/ui/ore/button_borderless_lighthover",
    "$pressed_button_texture|default": "textures/ui/ore/button_borderless_lightpressed",
    "$locked_button_texture|default": "textures/ui/ore/disabledButtonNoBorder",

    "property_bag": {
      "#hyperlink": "unset #hyperlink in property_bag"
    }
  },

  "ore_option_dropdown@settings_common.option_generic": {
    "$ore_ui_design": true,
    "$control_name": "settings_common.upgrade_option_dropdown_control"
  },

  "ore_option_toggle@settings_common.option_generic": {
    "$control_name": "settings_common.ore_option_toggle_control",
    "$option_label|default": "",
    "$toggle_tts_header": "$option_label",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$one_line_layout": true
      }
    ]
  },

  "ore_option_slider@settings_common.option_generic": {
    "$control_name": "settings_common.ore_option_slider_control"
  },

  "ore_option_text_edit@settings_common.option_generic": {
    "$option_place_holder_text|default": "",
    "$max_text_edit_length|default": 30,
    "$control_name": "settings_common.ore_option_text_edit_control"
  },

  "ore_option_text_edit_with_button@settings_common.option_generic": {
    "$option_place_holder_text|default": "",
    "$max_text_edit_length|default": 30,
    "$control_name": "settings_common.ore_option_text_edit_control_with_button"
  },

  "ore_option_text_edit_with_text_button@settings_common.option_generic": {
    "$option_place_holder_text|default": "",
    "$max_text_edit_length|default": 30,
    "$control_name": "settings_common.ore_option_text_edit_control_with_text_button"
  },


  // Upgrade Option & Ore UI Design
  "ore_option_text_edit_control@common.text_edit_box": {
    "$option_text_edit_control_size|default": [ "100%", "30px" ],
    "size": "$option_text_edit_control_size",
    "max_length": "$max_text_edit_length",
    "$text_edit_box_content_binding_name": "$option_binding_name",
    "$text_edit_box_binding_collection_name": "$option_binding_name",
    "$text_edit_box_binding_type": "global",
    "$text_box_enabled_binding_name": "$option_enabled_binding_name",
    "enabled": "$enabled",
    "$place_holder_text": "$option_place_holder_text",
    "$text_box_tts_header": "$option_label",
    "$tts_override_control_value|default": " ",
    "tts_override_control_value": "$tts_override_control_value",

    "$text_background_default": "common_ore.edit_box_indent",
    "$text_background_hover": "common_ore.edit_box_indent_hover",
    "$text_offset": [ 0, 2 ],

    "variables": [
      {
        "requires": "(not $option_enabled_binding_name or not $enabled)",
        "$text_box_enabled_binding_name": "#not_data_bound",
        "$text_edit_box_enabled_binding_type": "none"
      }
    ]
  },

  "ore_option_text_edit_control_with_button": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "30px" ],
    "controls": [
      {
        "text_box@common.text_edit_box": {
          "size": [ "85%", "100%" ],
          "max_length": "$max_text_edit_length",
          "$text_edit_box_content_binding_name": "$option_binding_name",
          "$text_edit_box_binding_collection_name": "$option_binding_name",
          "$text_edit_box_binding_type": "global",
          "$text_box_enabled_binding_name": "$option_enabled_binding_name",
          "enabled": "$enabled",
          "$place_holder_text": "$option_place_holder_text",

          "$text_background_default": "common_ore.edit_box_indent",
          "$text_background_hover": "common_ore.edit_box_indent_hover",
          "$text_offset": [ 0, 2 ],

          "$text_box_tts_header": "$option_label",
          "variables": [
            {
              "requires": "(not $option_enabled_binding_name or not $enabled)",
              "$text_box_enabled_binding_name": "#not_data_bound",
              "$text_edit_box_enabled_binding_type": "none"
            }
          ]
        }
      },
      {
        "button@common_buttons.light_glyph_button": {
          "$button_content": "settings_common.arrow_image",
          "size": [ "fill", "100%" ],

          "$border_visible": false,
          "$default_button_texture": "textures/ui/ore/button_borderless_light",
          "$hover_button_texture": "textures/ui/ore/button_borderless_lighthover",
          "$pressed_button_texture": "textures/ui/ore/button_borderless_lightpressed",
          "$locked_button_texture": "textures/ui/ore/disabledButtonNoBorder",

          "$default_glyph_color": [ 0.7, 0.7, 0.7 ],
          "$button_pressed_offset": [ 0, 2 ]
        }
      }
    ]
  },

  "ore_option_text_edit_control_with_text_button": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "$option_text_edit_control_with_button_size|default": [ "100%", "30px" ],
    "size": "$option_text_edit_control_with_button_size",
    "controls": [
      {
        "text_box@common.text_edit_box": {
          "$option_text_edit_control_size|default": [ "85%", "100%" ],
          "size": "$option_text_edit_control_size",
          "max_length": "$max_text_edit_length",
          "$text_edit_box_content_binding_name": "$option_binding_name",
          "$text_edit_box_binding_collection_name": "$option_binding_name",
          "$text_edit_box_binding_type": "global",
          "$text_box_enabled_binding_name": "$option_enabled_binding_name",
          "enabled": "$enabled",
          "$place_holder_text": "$option_place_holder_text",

          "$text_background_default": "common_ore.edit_box_indent",
          "$text_background_hover": "common_ore.edit_box_indent_hover",
          "$text_offset": [ 0, 2 ],

          "$text_box_tts_header": "$option_label",
          "variables": [
            {
              "requires": "(not $option_enabled_binding_name or not $enabled)",
              "$text_box_enabled_binding_name": "#not_data_bound",
              "$text_edit_box_enabled_binding_type": "none"
            }
          ]
        }
      },
      {
        "button@button_preset.light_ore_button": {
          "$pressed_button_name|default": "unset_button_name",
          "$button_text|default": "unset $button_text",
          "$option_button_control_size|default": [ "fill", "100%" ],
          "size": "$option_button_control_size"
        }
      }
    ]
  },


  "ore_option_slider_control": {
    "type": "panel",
    "size": [ "100% - 8px", 16 ],
    "offset": [ 0, 0 ],
    "anchor_from": "center",
    "anchor_to": "center",
    "controls": [
      {
        "slider@common.slider": {
          "size": [ "100% - 16px", 8 ],
          "$slider_box_size": [ 16, 16 ],
          "offset": [ 4, 0 ],
          "anchor_from": "center",
          "anchor_to": "center",

          "$option_label|default": "",

          "$slider_tts_header": "$option_label",
          "$slider_tts_header_binding_type": "global",


          // Ore UI Design
          "$slider_box_layout|default": "common_ore.ore_slider_button_layout",
          "$slider_box_hover_layout|default": "common_ore.ore_slider_button_hover_layout",
          "$slider_box_locked_layout|default": "common_ore.ore_slider_button_locked_layout",
          "$slider_box_indent_layout|default": "common_ore.ore_slider_button_indent_layout",

          "$slider_step_factory_control_ids": {
            "slider_step": "@common_ore.ore_slider_step_progress",
            "slider_step_hover": "@common_ore.ore_slider_step_progress_hover",
            "slider_step_progress": "@common_ore.ore_slider_step",
            "slider_step_progress_hover": "@common_ore.ore_slider_step_hover"
          },
          "controls": [
            {
              "slider_box@common_ore.ore_slider_box": {
                "$slider_box_layout": "$slider_box_layout",
                "$slider_box_size": "$slider_box_size",
                "$slider_track_button": "$slider_name"
              }
            },
            {
              "slider_bar_default@common_ore.ore_slider_bar_default": {}
            },
            {
              "slider_bar_hover@common_ore.ore_slider_bar_hover": {
                "visible": false
              }
            }
          ],


          "enabled": "$enabled",
          "$slider_enabled_binding_name": "$option_enabled_binding_name",
          "$slider_enabled_binding_type": "global",
          "variables": [
            {
              "requires": "(not $option_enabled_binding_name or not $enabled)",
              "$slider_enabled_binding_name": "#not_data_bound",
              "$slider_enabled_binding_type": "none"
            }
          ]
        }
      }
    ]
  },


  "ore_option_toggle_control@common.toggle": {
    "layer": 2,
    "$toggle_state_binding_name|default": "$option_binding_name",
    "$toggle_enabled_binding_name|default": "$option_enabled_binding_name",
    "$toggle_enabled_binding_type|default": "global",
    "size": [ "100%", "100%c" ],
    "$binding_type": "global",
    "$binding_condition": "once",
    "$unchecked_control": "common_ore.ore_option_toggle_off",
    "$checked_control": "common_ore.ore_option_toggle_on",
    "$unchecked_hover_control": "common_ore.ore_option_toggle_off_hover",
    "$checked_hover_control": "common_ore.ore_option_toggle_on_hover",
    "$unchecked_locked_control": "common_ore.ore_option_toggle_off_locked",
    "$unchecked_locked_hover_control": "common_ore.ore_option_toggle_off_locked",
    "$checked_locked_control": "common_ore.ore_option_toggle_on_locked",
    "$checked_locked_hover_control": "common_ore.ore_option_toggle_on_locked",

    "$enable_directional_toggling": false,

    "enabled": "$enabled",
    "variables": [
      {
        "requires": "(not $option_enabled_binding_name or not $enabled)",
        "$toggle_enabled_binding_name": "#not_data_bound",
        "$toggle_enabled_binding_type": "none"
      }
    ]
  },



  "upgrade_option_dropdown@settings_common.option_generic": {
    "$control_name": "settings_common.upgrade_option_dropdown_control"
  },

  "upgrade_option_dropdown_control": {
    "type": "panel",
    "$option_dropdown_size|default": [ "100%", 28 ],
    "size": "$option_dropdown_size",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 2,
    "$dropdown_background_control|default": "common.dropdown_background",
    "$option_dropdown_type|default": "common.dropdown",
    "$option_label|default": "",
    "$dropdown_content|default": "common.empty_panel",
    "controls": [
      {
        "dropdown@$option_dropdown_type": {
          "visible": false,
          "$dropdown_toggle": "settings_common.options_dropdown_toggle_control",
          "$dropdown_background": "$dropdown_background_control",
          "$dropdown_content|default": "unset_dropdown_content",
          "$dropdown_name|default": "unset $dropdown_name",
          "$options_dropdown_toggle_label_binding|default": "unset $options_dropdown_toggle_label_text",
          "$locked_alpha": 0.5,
          "$toggle_tts_header": "$option_label"
        }
      },
      {
        "content@$dropdown_content": {}
      }
    ]
  },

  "upgrade_option_radio_dropdown_group": {
    "type": "panel",
    "size": [ "100%", 32 ],
    "$toggle_tts_header": "",
    "$toggle_tts_name": "accessibility.dropdown.listItem",
    "$toggle_tts_toggle_on_text": "accessibility.state.selected",
    "$toggle_tts_toggle_off_text": "accessibility.state.unselected",
    "$toggle_tts_type_priority": 50,

    "controls": [
      {
        "group_control@settings_common.upgrade_option_radio_group_control": {
          "anchor_from": "center",
          "anchor_to": "center"
        }
      }
    ]
  },

  "upgrade_option_radio_group_control": {
    "type": "stack_panel",
    "size": [ "100%", 28 ],
    "orientation": "horizontal",
    "controls": "$radio_buttons",
    "$radio_factory|default": { "name": "empty" },
    "$radio_collection_name|default": "",
    "$radio_bindings|default": [],

    "factory": "$radio_factory",
    "collection_name": "$radio_collection_name",
    "bindings": "$radio_bindings"
  },

  "upgrade_radio_with_label": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "fill", 28 ],
    "offset": [ 0, 0 ],
    "$enabled|default": true,
    "controls": [
      { "radio_with_label_core@settings_common.upgrade_radio_with_label_core": {} }
    ]
  },

  "upgrade_radio_item_with_label_and_content": {
    "type": "panel",
    "size": [ "100%", "100%cm" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",

    "$radio_background_unchecked_color": "$dropdown_radio_background_unchecked_color",
    "$radio_background_checked_color": "$dropdown_radio_background_checked_color",
    "$radio_background_hover_color": "$dropdown_radio_background_hover_color",

    "$checked_control": "settings_common.radio_with_label_and_content_checked",
    "$unchecked_control": "settings_common.radio_with_label_and_content_unchecked",
    "$checked_hover_control": "settings_common.radio_with_label_and_content_checked_hover",
    "$unchecked_hover_control": "settings_common.radio_with_label_and_content_unchecked_hover",
    "$checked_locked_control": "settings_common.radio_with_label_and_content_checked_locked",
    "$unchecked_locked_control": "settings_common.radio_with_label_and_content_unchecked_locked",
    "$checked_locked_hover_control": "settings_common.radio_with_label_and_content_checked_locked",
    "$unchecked_locked_hover_control": "settings_common.radio_with_label_and_content_unchecked_locked",

    "controls": [
      { "radio_with_label_core@settings_common.upgrade_radio_with_label_core": {} }
    ]
  },

  "upgrade_radio_with_label_core@settings_common.radio_with_label_core": {
    "size": [ "100%", "100%" ],

    "$unchecked_control|default": "common_radios.upgrade_radio_unchecked",
    "$checked_control|default": "common_radios.upgrade_radio_checked",
    "$unchecked_hover_control|default": "common_radios.upgrade_radio_unchecked_hover",
    "$checked_hover_control|default": "common_radios.upgrade_radio_checked_hover",
    "$unchecked_locked_control|default": "common_radios.upgrade_radio_unchecked_locked",
    "$unchecked_locked_hover_control|default": "common_radios.upgrade_radio_unchecked_locked",
    "$checked_locked_control|default": "common_radios.upgrade_radio_checked_locked",
    "$checked_locked_hover_control|default": "common_radios.upgrade_radio_checked_locked",

    "$unchecked_radio_label_color|default": "$light_toggle_default_text_color",
    "$checked_radio_label_color|default": "$light_toggle_checked_default_text_color",
